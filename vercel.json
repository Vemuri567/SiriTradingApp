{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/orders",
      "destination": "/server.js"
    },
    {
      "source": "/admin",
      "destination": "/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],
  "env": {
    "BASE_URL": "https://siri-traders.vercel.app",
    "ENCRYPTION_KEY": "siri-traders-secure-key-2024"
  }
} 