{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/orders",
      "dest": "server.js"
    },
    {
      "src": "/admin",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "BASE_URL": "https://siri-traders.vercel.app",
    "ENCRYPTION_KEY": "siri-traders-secure-key-2024"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
} 